extends ../layout

block title
  = "Login" 

block content
  .span6.offset3
    .span10.offset1.well
      h2 Login 
      if form.errors
        .alert.alert-danger= form.errors[0]
      form(action="/login", method="POST")
        .control-group
          label.control-label(for="email") Email:
          .controls
            input.span12(type="text", name="email", value=form.email)
        .control-group 
          label.control-label(for="password") Password:
          .controls
            input.span12(type="password", name="password")
        .control-group 
          .controls
            button.btn Login
